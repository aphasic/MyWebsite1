<% include ../include/header %> 	    
</head>
<body>						
	<% include ../include/nav_menu %>
	<div>
		<div class="main">
			<form action="/admin/archive/savearchive" method="post">			
				<div class="col-lg-9">
					<div class="panel panel-default">
						<div class="panel-heading">
							编辑文章
						</div>
						<div class="panel-body" style="padding-right:15px">						
							<div class="form-group">								    
							    <input type="text" name="title" class="form-control" value="<%=archive.title%>">
							</div>
							<div class="form-group">
								<textarea name="abstract" class="form-control" rows="3" ><%=archive.abstract %></textarea>
							</div>
							<div>
								<script id="ueditor" name="content" type="text/plain"><%-archive.content%></script>
							    <script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
							    <script type="text/javascript" src="/ueditor/ueditor.all.min.js"></script>
							    <script type="text/javascript">
							        var ue = UE.getEditor('ueditor',{initialFrameHeight:380});
							    </script>
							</div>
						</div>
					</div>
				</div>	
				<div class="col-lg-3">
					<div class="panel panel-default">
						<div class="panel-heading">
							选择栏目
						</div>
						<div class="panel-body">					
							<% categorylist.forEach(function(item){ %>
								<p>
									<% for(var m = 0; m < item.level; m++){ %>
										<script>document.write('— ');</script>
									<% } %>		
									<% if(item.checked == 1) { %>			
										<input type="checkbox" value="<%= item._id %>" name="catid" checked="checked">
									<% }else{ %>
										<input type="checkbox" value="<%= item._id %>" name="catid">
									<% } %>
									<%= item.name %>
								</p>
							<% }) %>
						</div>					
					</div>
					<div class="panel panel-default">
						<div class="panel-heading">
							发布
						</div>
						<div class="panel-body">
							<div class="form-group">
						    	<label><i class="glyphicon glyphicon-eye-open"> </i> 公开度</label>
						    	<div class="radio">
								  	<label>
								  		<% if(archive.access == 1) {%>
								    		<input type="radio" name="access" value="1" checked>
								    	<% } else { %>
								    		<input type="radio" name="access" value="1">
								    	<% } %>
								    	公 开
								  	</label>
								</div>
								<div class="radio">
								  	<label>
								  		<% if(archive.access == 2) {%>
								    	<input type="radio" name="access" value="2" checked>
								    	<% } else { %>
								    		<input type="radio" name="access" value="2">
								    	<% } %>
								    	私 密
								  	</label>
								</div>
								<div class="radio">
								  	<label>
								  		<% if(archive.access == 3) {%>
								    	<input type="radio" name="access" value="3" checked>
								    	<% } else { %>
								    		<input type="radio" name="access" value="3">
								    	<% } %>
								    	密码访问
								  	</label>
								</div>
								<div class="form-group">
									<% if(archive.access == 3) {%>
								    	<input type="text" name="accesspwd" class="form-control" value="<%=archive.accesspwd%>">
								    <% }else { %>
								    	<input type="text" name="accesspwd" class="form-control" placeholder="访问密码">
								    <% } %>
								 </div>
						  </div>
						</div>
						<div class="panel-footer">
							<input type="hidden" name="id" value="<%=archive._id%>">
							<input type="hidden" name="action" value="update">
							<button type="submit" class="btn btn-danger btn-sm">更 新</button>
						</div>
					</div>
				</div>				
			</form>
		</div>
		
	</div>	
	<script src="/javascripts/jquery2.1.4.min.js"></script>
	<script src="/javascripts/bootstrap.min.js"></script>	
</body>
</html>